{
    "manifest_version": 2,
  
    "name": "Link Checker",
    "description": "Check broken links of the website you're in",
    "version": "1.0",
  
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "*://*/*",
      "https://api.sendgrid.com/v3/mail/send",
      "https://api.sendgrid.com/*",
      "storage",
      "https://ajax.googleapis.com/"
    ]
  }
